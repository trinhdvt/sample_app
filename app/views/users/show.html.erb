<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: Settings.gravatar.size_200 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @microposts.any? %>
      <%= "#{t(".micropost")} (#{@pagy.count})" %>

      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_bootstrap_nav(@pagy) %>

    <% else %>
      <h3><%= t ".no_micropost" %></h3>
    <% end %>
  </div>
</div>
